{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "users": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": { "$ref": "../common/id" },
                        "changes": {
                            "type": "object",
                            "properties": {
                                "bike": { "$ref": "#/definitions/idReference" },
                                "position": {
                                    "allOf": [
                                        { "$ref": "#/definitions/propertyChangeBase" },
                                        {
                                            "properties": {
                                                "old": { "$ref": "../common/geopoint" },
                                                "new": { "$ref": "../common/geopoint" }
                                            }
                                        }
                                    ]
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "id",
                        "changes"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "required": [
            "users"
        ],
        "additionalProperties": false
    },
    "definitions": {
        "propertyChangeBase": {
            "type": "object",
            "required": [ "old", "new" ],
            "additionalProperties": false
        },
        "idReference": {
            "allOf": [
                { "$ref": "#/definitions/propertyChangeBase" },
                {
                    "properties": {
                        "old": {
                            "anyOf": [
                                { "$ref": "../common/id" },
                                { "type": "null" }
                            ]
                        },
                        "new": {
                            "anyOf": [
                                { "$ref": "../common/id" },
                                { "type": "null" }
                            ]
                        }
                    }
                }
            ]
        }
    }
}